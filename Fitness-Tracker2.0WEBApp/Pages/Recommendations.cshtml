@page
@model Fitness_Tracker2._0WEBApp.Pages.RecommendationsModel

<h2>Recommended Workouts for You</h2>

@if (Model.RecommendedWorkouts != null && Model.RecommendedWorkouts.Count > 0)
{
    <ul>
        @foreach (var workout in Model.RecommendedWorkouts)
        {
            <li>@workout.GetName() - @workout.GetDescription()</li>
        }
    </ul>
}
else
{
    <p>No recommendations available at this time.</p>
}

<a asp-page="/Application">Back to list</a>

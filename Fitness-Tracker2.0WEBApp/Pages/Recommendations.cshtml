@page
@model Fitness_Tracker2._0WEBApp.Pages.RecommendationsModel
@{
    ViewData["Title"] = "Recommended Workouts for You";
}
@section Styles {
    <link rel="stylesheet" href="~/css/recommendations.css" asp-append-version="true" />
}

<h1>Recommended Workouts for You</h1>

<ul class="recommendation-list">
    @foreach (var workout in Model.RecommendedWorkouts)
    {
        <li class="recommendation-item">
            <span class="workout-title">@workout.GetName() - @workout.GetDescription()</span>
            <a class="recommendation-details-btn" asp-page="./Details" asp-route-id="@workout.GetId()">Details</a>
        </li>
    }
</ul>

<a class="back-to-list" asp-page="./Index">Back to list</a>
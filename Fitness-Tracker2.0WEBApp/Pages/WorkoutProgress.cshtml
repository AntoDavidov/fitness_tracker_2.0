@page "{id:int}"
@model Fitness_Tracker2._0WEBApp.Pages.WorkoutProgressModel

<h2>@Model.Workout.GetName() - Progress</h2>

<p>@Model.Workout.GetDescription()</p>
<p>Level: @Model.Workout.GetWorkoutLevel()</p>

<h3>Exercises</h3>
<form method="post">
    <ul>
        @foreach (var exercise in Model.Exercises)
        {
            <li>
                <input type="checkbox" name="completedExercises" value="@exercise.Id" @(exercise.IsCompleted ? "checked" : "") />
                @exercise.Name
            </li>
        }
    </ul>
    <button type="submit">Save Progress</button>
</form>

<a asp-page="/Application">Back to list</a>

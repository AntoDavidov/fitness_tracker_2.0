        <p>@workout.GetDescription()</p>
        <a asp-page="/Details" asp-route-id="@workout.GetId()" class="index-btn index-featured-workout-btn">View Details</a>
        </div>
        }
    </div> *@

    <h3 class="index-subtitle">Motivational Quote of the Day</h3>
    <p class="index-text">@Model.MotivationalQuote</p>

    <h3 class="index-subtitle">Quick Links</h3>
    <ul class="index-list">
        <li class="index-list-item"><a asp-page="/Application">Discover Workouts</a></li>
        <li class="index-list-item"><a asp-page="/FavoriteWorkouts">My Favorites</a></li>
    </ul>
</div>

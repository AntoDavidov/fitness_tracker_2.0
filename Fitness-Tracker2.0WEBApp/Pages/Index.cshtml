@page
@model Fitness_Tracker2._0WEBApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section Styles {
    <link rel="stylesheet" href="~/css/indexStyle.css" asp-append-version="true" />
}

<div class="index-container">
    <h1 class="index-title">Welcome to Fitness Tracker!</h1>

    <p class="index-text">Your personalized fitness companion.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <h2 class="index-subtitle">Hello, @User.Identity.Name</h2>

        <h3 class="index-subtitle">Your Progress</h3>
        <p class="index-text">Favorite Workouts: @Model.FavoriteWorkoutsCount</p>
    }
    else
    {
        <h2 class="index-subtitle">Join Us Today!</h2>
        <p class="index-text">Sign up to start tracking your workouts and progress.</p>
        <a asp-page="/SignUp" class="index-btn">Sign Up</a>
        <a asp-page="/Login" class="index-btn">Log In</a>
    }

    @* <h3 class="index-subtitle">Featured Workouts</h3>
